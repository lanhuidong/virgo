<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nexusy.virgo.data.mapper.TodoListMapper">
    <insert id="insertTodoList">
        insert into todo_list (created, content, remind_at, finished, loop_type)
        values(#{created}, #{content}, #{remindAt}, #{finished}, #{loopType})
    </insert>
    <select id="selectTodoList" resultType="com.nexusy.virgo.data.model.TodoList">
        select * from todo_list where id = #{id}
    </select>
</mapper>